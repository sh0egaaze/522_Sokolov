<Window x:Class="_522_Sokolov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_522_Sokolov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="BackButton"
                    Content="Назад"
                    Style="{DynamicResource BaseButtonStyle}"
                    Click="BackButton_Click"/>

            <Button x:Name="ThemeButton"
                    Content="Сменить тему"
                    Style="{DynamicResource BaseButtonStyle}"
                    Margin="10,0,0,0"
                    Click="ThemeButton_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <TextBlock x:Name="DateTimeNow"
                   Style="{DynamicResource BaseTextStyle}"
                   HorizontalAlignment="Left"
                   Margin="522,0,0,0" Grid.Row="2"
                   VerticalAlignment="Center"
                   Height="35"
                   Width="194"
                   Grid.Column="1"/>
    </Grid>
</Window>