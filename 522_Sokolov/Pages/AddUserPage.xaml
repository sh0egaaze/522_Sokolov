<Page x:Class="_522_Sokolov.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Sokolov.Pages"
      mc:Ignorable="d" 
      Title="AddUserPage">
    <Grid>
        <GroupBox Header="Новый пользователь" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин" Style="{StaticResource BaseTextStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TBLogin" Text="{Binding Login}" ToolTip="Введите логин" Style="{StaticResource BaseTextBoxStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль" Style="{StaticResource BaseTextStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TBPass" Text="{Binding Password}" ToolTip="Введите пароль" Style="{StaticResource BaseTextBoxStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Роль" Style="{StaticResource BaseTextStyle}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbRole" SelectedItem="{Binding Role}" ToolTip="Выберите роль" Style="{StaticResource BaseComboBoxStyle}">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="User"/>
                </ComboBox>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="ФИО" Style="{StaticResource BaseTextStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TBFio" Text="{Binding FIO}" ToolTip="Введите ФИО" Style="{StaticResource BaseTextBoxStyle}"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Фото (необязательно)" Style="{StaticResource BaseTextStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="TBPhoto" Text="{Binding Photo}" ToolTip="Добавьте фото" Style="{StaticResource BaseTextBoxStyle}"/>
                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ButtonSave" Content="Сохранить" Click="ButtonSave_Click" Style="{StaticResource BaseButtonStyle}"/>
                    <Button x:Name="ButtonClean" Content="Очистить" Click="ButtonClean_Click" Style="{StaticResource BaseButtonStyle}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Page>