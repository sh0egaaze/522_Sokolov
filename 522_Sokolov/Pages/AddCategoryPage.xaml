<Page x:Class="_522_Sokolov.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Sokolov.Pages"
      mc:Ignorable="d" 
      Title="AddCategoryPage">
    <Grid>
        <GroupBox Header="Новая категория" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название категории" Style="{StaticResource BaseTextStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TBCategoryName" Text="{Binding Name}" Style="{StaticResource BaseTextBoxStyle}"/>
                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ButtonSaveCategory" Content="Сохранить" Click="ButtonSaveCategory_Click" Style="{StaticResource BaseButtonStyle}" HorizontalAlignment="Center"/>
                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ButtonClean" Content="Очистить" Click="ButtonClean_Click" Style="{StaticResource BaseButtonStyle}" HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>
    </Grid>
</Page>