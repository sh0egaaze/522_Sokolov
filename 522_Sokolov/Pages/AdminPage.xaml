<Page x:Class="_522_Sokolov.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Sokolov.Pages"
      mc:Ignorable="d" 
      Title="AdminPage">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnTab1" Content="Таблица пользователей" Style="{StaticResource BaseButtonStyle}" Click="BtnTab1_Click"/>
            <Button x:Name="BtnTab2" Content="Таблица категорий" Style="{StaticResource BaseButtonStyle}" Click="BtnTab2_Click"/>
            <Button x:Name="BtnTab3" Content="Таблица платежей" Style="{StaticResource BaseButtonStyle}" Click="BtnTab3_Click"/>
            <Button x:Name="BtnTab4" Content="Диаграммы" Style="{StaticResource BaseButtonStyle}" Click="BtnTab4_Click"/>
        </StackPanel>
    </Grid>
</Page>